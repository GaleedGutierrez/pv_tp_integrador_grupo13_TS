{
	"name": "pv-tp-integrador-grupo13-ts",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"preview": "npm run build && vite preview",
		"lint": "eslint -c eslint.config.js . --max-warnings 0",
		"lint:fix": "eslint --fix ./**/*.{js,jsx,mjs,cjs,ts,tsx,mts,cts,json,astro}",
		"prettier": "prettier . --check",
		"prettier:fix": "prettier . --write",
		"stylelint": "stylelint ./**/*.{css,scss} --allow-empty-input",
		"stylelint:fix": "stylelint --fix ./**/*.{css,scss} --allow-empty-input",
		"lint-text": "textlint ./**/*.md ",
		"lint-text:fix": "textlint --fix ./**/*.md ",
		"lint-md": "markdownlint-cli2 --config \".markdownlint-cli2.jsonc\" **/*.md \"#node_modules\" && npm run lint-text",
		"lint-md:fix": "markdownlint-cli2 --config \".markdownlint-cli2.jsonc\" --fix **/*.md \"#node_modules\" && npm run lint-text:fix",
		"check-for-dupes": "jscpd ./",
		"test": "vitest run",
		"test:e2e": "playwright test",
		"test:performance": "lighthouse http://localhost:4173/ --view --output html --output-path ./lighthouse-report/lighthouse-report.html",
		"prepare": "husky"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.1.1",
		"@radix-ui/react-alert-dialog": "^1.1.14",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-slot": "^1.2.3",
		"@reduxjs/toolkit": "^2.8.2",
		"@tailwindcss/vite": "^4.1.10",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.515.0",
		"motion": "^12.18.1",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-hook-form": "^7.58.1",
		"react-loading-skeleton": "^3.5.0",
		"react-redux": "^9.2.0",
		"react-router": "^7.6.2",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.10",
		"zod": "^3.25.67"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/js": "^9.25.0",
		"@playwright/test": "^1.53.0",
		"@stylistic/eslint-plugin": "^4.4.1",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^24.0.1",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"@vitejs/plugin-react-swc": "^3.9.0",
		"@vitest/eslint-plugin": "^1.2.5",
		"eslint": "^9.29.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-import-resolver-typescript": "^4.4.3",
		"eslint-plugin-check-file": "^3.3.0",
		"eslint-plugin-import-x": "^4.15.2",
		"eslint-plugin-jsdoc": "^51.0.1",
		"eslint-plugin-jsonc": "^2.20.1",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-playwright": "^2.2.0",
		"eslint-plugin-prettier": "^5.4.1",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"eslint-plugin-security": "^3.0.1",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-sort-class-members": "^1.21.0",
		"eslint-plugin-tsdoc": "^0.4.0",
		"eslint-plugin-unicorn": "^59.0.1",
		"eslint-plugin-unused-imports": "^4.1.4",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"jscpd": "^4.0.5",
		"jsdom": "^26.1.0",
		"markdownlint-cli2": "^0.18.1",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.12",
		"stylelint": "^16.20.0",
		"stylelint-config-standard": "^38.0.0",
		"stylelint-order": "^7.0.0",
		"stylelint-prettier": "^5.0.3",
		"textlint": "^14.8.4",
		"textlint-filter-rule-comments": "^1.2.2",
		"textlint-rule-terminology": "^5.2.12",
		"tw-animate-css": "^1.3.4",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.30.1",
		"vite": "^6.3.5",
		"vite-plugin-svgr": "^4.3.0",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.3"
	},
	"lint-staged": {
		"*.{js,jsx,mjs,cjs,ts,tsx,mts,cts,json,astro}": [
			"eslint --fix",
			"prettier --write"
		],
		"*{css,s(a|c)ss}": [
			"stylelint --fix",
			"prettier --write"
		],
		"*.{md,mdx}": [
			"markdownlint-cli2 --config \".markdownlint-cli2.jsonc\" --fix",
			"textlint --fix",
			"prettier --write"
		],
		"*.{json,jsonc}": [
			"prettier --write"
		]
	},
	"jscpd": {
		"threshold": 15,
		"reporters": [
			"consoleFull"
		],
		"ignore": [
			"**/node_modules/**",
			"**/dist/**",
			"**/dist-dev/**",
			"**/build/**",
			"**/fonts/**",
			"**/coverage/**",
			"**/playwright-reports/**",
			"**/test-results/**",
			"**/lighthouse-report/**",
			"**/tsconfig.*.json"
		],
		"absolute": true
	}
}
