{
	"compilerOptions": {
		// ✅ Target y Module para JavaScript limpio
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "node",

		// ✅ JSX Configuration para código limpio
		"jsx": "preserve", // ✅ Mantener JSX como JSX (más limpio)
		"jsxFactory": "React.createElement",

		// ✅ Output Configuration
		"outDir": "./dist-js",
		"rootDir": "./src",
		"noEmit": false,
		"declaration": false, // ✅ No generar .d.ts (solo JS)
		"sourceMap": false, // ✅ No generar mapas (JS más limpio)

		// ✅ Configuración para generar archivos con extensión correcta
		"strict": false,
		"skipLibCheck": true,
		"pretty": true,
		"removeComments": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,

		// ✅ Resolver imports sin extensiones
		"allowJs": true,
		"checkJs": false,

		/* Paths */
		"baseUrl": ".",
		"paths": {
			"/*": ["./public/*"],
			"@public/*": ["./public/*"],
			"@app/*": ["./app/*"],
			"@tests/*": ["./tests/*"],
			"@e2e/*": ["./e2e/*"],
			"@/*": ["./src/*"],
			"@application/*": ["./src/application/*"],
			"@assets/*": ["./src/assets/*"],
			"@components/*": ["./src/components/*"],
			"@constants/*": ["./src/constants/*"],
			"@context/*": ["./src/context/*"],
			"@data/*": ["./src/data/*"],
			"@domain/*": ["./src/domain/*"],
			"@guard/*": ["./src/guard/*"],
			"@hooks/*": ["./src/hooks/*"],
			"@icons/*": ["./src/assets/icons/*"],
			"@images/*": ["./src/assets/images/*"],
			"@infrastructure/*": ["./src/infrastructure/*"],
			"@models/*": ["./src/models/*"],
			"@modules/*": ["./src/modules/*"],
			"@pages/*": ["./src/pages/*"],
			"@private/*": ["./src/private/*"],
			"@ui/*": ["./src/components/ui/*"],
			"@redux/*": ["./src/redux/*"],
			"@routes/*": ["./src/routes/*"],
			"@services/*": ["./src/services/*"],
			"@state/*": ["./src/state/*"],
			"@shared": ["src/utils/*"],
			"@store/*": ["./src/store/*"],
			"@styles/*": ["./src/styles/*"],
			"@sections/*": ["./src/sections/*"],
			"@templates/*": ["./src/templates/*"],
			"@utils/*": ["src/utils/*"],
			"@views/*": ["./src/views/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["**/*.test.*", "**/*.spec.*"]
}
